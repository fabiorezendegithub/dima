@inherits OrderStatusComponent

@switch (Status)
{
    case EOrderStatus.Canceled:
        <MudChip Color="Color.Error">CANCELADO</MudChip>
        break;
        
    case EOrderStatus.Paid:
        <MudChip Color="Color.Success">PAGO</MudChip>
        break;
        
    case EOrderStatus.Refunded:
        <MudChip Color="Color.Info">EXTORNADO</MudChip>
        break;
        
    case EOrderStatus.WaitingPayment:
        <MudChip Color="Color.Warning">AGURDANDO PAGAMENTO</MudChip>
        break;    
        
    default:
        <MudChip Color="Color.Info">N√ÉO DEFINIDO</MudChip>
        break;            
}